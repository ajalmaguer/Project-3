<!DOCTYPE html>
<html>
<head>
  <$- include('../partials/head') $>
</head>
<body class="">
<$- include('../partials/navbar') $>

<div id="host-body-container" class="container center-align">
  <div class="row">

    <div class="col s12 m8 push-m2">
      <div class="card">
        <div id="secret-code-container" class="section">
          <div class="chip">
              <img src="<$= user.imageUrl $>" alt="Contact Person">
              <$= user.firstName $>
          </div>
            <h5><span id="game-id"><$= game._id $></span></h5>
            <p>People can join your game by entering this secret code.</p>
          </div>
        </div>
    </div>
  </div>

<div class="card">
    <$ if (game.start_time) { $>
      <div id="time-container" class="section">
        <h5>Time Left</h5>
        <div id="clock">
          <div class="row">
            <div class="col s11 m8 push-m2">
              <div class="card">
                <div class="con-space">
                  <div id="clockmin"></div> : <div id="clocksec"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

    <div id="photos-container" class="section">
      <h5>Submitted Tasks</h5>
      <$ } $>

    </div>
    <div class="divider"></div>


    <div id="players-container" class="section">
      <h5>Players</h5>
      <ul>
        <$ players.forEach(player => { $>
          <li><$= player.firstName $></li>
        <$ }) $>
      </ul>

    </div>
    <div class="divider"></div>

    <div id="add-task-container" class="section">
      <h5>Tasks</h5>
      <$ if (!game.start_time) { $>
        <div class="row">
          <div class="col s12">
              <input id="add-input" type="text" class="input-instruction" name="instruction[task]" placeholder="Add a task">
              <button  class="add-button btn" id="<$= game.id $>">Add</button>
          </div>
        </div>
      <$ } $>
</div>

        <div id="task-list" class="row left-align"></div>
    </div>

</div> <!-- for container div -->

<$ if (!game.start_time) { $>
<footer class="footer123 page-footer indigo">
  <div class="start-button-container container center-align">
    <div class="row">
      <div class="col s12">
        <button class="btn-large waves-effect waves-light disabled" id="startGame" onclick="startGame('<$= game.id $>')">Start Game</button>
      </div>
    </div>
  </div>
</footer>
<$ } $>

<$- include('../partials/hostScript') $>

</body>
</html>

